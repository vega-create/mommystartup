---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts.map(post => ({
    params: { slug: post.slug },
    props: { post }
  }));
}

const { post } = Astro.props;
const { Content, headings } = await post.render();
const nums = ['‰∏Ä', '‰∫å', '‰∏â', 'Âõõ', '‰∫î', 'ÂÖ≠', '‰∏É', 'ÂÖ´', '‰πù', 'ÂçÅ'];
let h2Count = 0;
let h3Count = 0;
const tocItems = headings.filter(h => h.depth <= 3).map(h => {
  if (h.depth === 2) {
    h2Count++;
    h3Count = 0;
    return { ...h, label: `${nums[h2Count - 1] || h2Count}„ÄÅ${h.text}` };
  } else {
    h3Count++;
    return { ...h, label: `${h3Count}. ${h.text}` };
  }
});

// ÂèñÂæóÁõ∏ÈóúÊñáÁ´†
const allPosts = await getCollection('posts');
const relatedPosts = allPosts
  .filter(p => p.data.category === post.data.category && p.slug !== post.slug)
  .slice(0, 3);
---

<Layout 
  title={post.data.title} 
  description={post.data.description}
  image={post.data.image}
>
  <article class="article">
    <header class="article-header">
      <a href={`/category/${post.data.category}/`} class="article-category">
        {post.data.category}
      </a>
      <h1 class="article-title">{post.data.title}</h1>
      <p class="article-meta">
        {post.data.author} ¬∑ {new Date(post.data.publishDate).toLocaleDateString('zh-TW', { year: 'numeric', month: 'long', day: 'numeric' })}
      </p>
    </header>
    
    {post.data.image && (
      <img src={post.data.image} alt={post.data.title} class="article-image">
    )}
    {tocItems.length > 0 && (
      <nav class="toc">
        <p class="toc-title">üìë ÁõÆÈåÑ</p>
        <ul>
          {tocItems.map(h => (
            <li class={`toc-h${h.depth}`}>
              <a href={`#${h.slug}`}>{h.label}</a>
            </li>
          ))}
        </ul>
      </nav>
    )}
    <div class="article-content">
      <Content />
    </div>
    
    <!-- ÂàÜ‰∫´ÊåâÈàï -->
    <div class="share-buttons">
      <span>ÂàÜ‰∫´ÊñáÁ´†Ôºö</span>
      <a href={`https://www.facebook.com/sharer/sharer.php?u=${Astro.url}`} 
         target="_blank" 
         class="share-btn facebook">
        Facebook
      </a>
      <a href={`https://line.me/R/msg/text/?${encodeURIComponent(post.data.title)}%20${Astro.url}`} 
         target="_blank" 
         class="share-btn line">
        LINE
      </a>
    </div>
    
    <!-- Áõ∏ÈóúÊñáÁ´† -->
    {relatedPosts.length > 0 && (
      <section class="related-posts">
        <h2 class="section-title">Áõ∏ÈóúÊñáÁ´†</h2>
        <div class="posts-grid" style="grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));">
          {relatedPosts.map(related => (
            <a href={`/posts/${related.slug}/`} class="post-card">
              <div class="post-card-image" style="padding-top: 60%;">
                {related.data.image ? (
                  <img src={related.data.image} alt={related.data.title}>
                ) : (
                  <div style="background: linear-gradient(135deg, var(--primary-light), var(--primary)); position: absolute; inset: 0;"></div>
                )}
              </div>
              <div class="post-card-content">
                <h3 class="post-card-title" style="font-size: 16px;">{related.data.title}</h3>
              </div>
            </a>
          ))}
        </div>
      </section>
    )}
  </article>
</Layout>

