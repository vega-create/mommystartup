<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    const nums = ['‰∏Ä', '‰∫å', '‰∏â', 'Âõõ', '‰∫î', 'ÂÖ≠', '‰∏É', 'ÂÖ´', '‰πù', 'ÂçÅ'];
    const content = document.querySelector('.article-content');
    if (!content) return;
    let h2Count = 0;
    let h3Count = 0;
    content.querySelectorAll('h2, h3').forEach(el => {
      if (el.tagName === 'H2') {
        h2Count++;
        h3Count = 0;
        el.textContent = (nums[h2Count - 1] || h2Count) + '„ÄÅ' + el.textContent;
      } else {
        h3Count++;
        el.textContent = h3Count + '. ' + el.textContent;
      }
    });
  });
</script>