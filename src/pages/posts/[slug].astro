const tocItems = headings.filter(h => h.depth <= 3).map(h => {
  if (h.depth === 2) {
    h2Count++;
    h3Count = 0;
    return { ...h, label: `${nums[h2Count - 1] || h2Count}ã€${h.text}` };
  } else {
