    <!-- æ¨™ç±¤ -->
    {post.data.tags && post.data.tags.length > 0 && (
      <div class="article-tags">
        {post.data.tags.map(tag => (
          <span class="tag">#{tag}</span>
        ))}
      </div>
    )}

    <!-- ä½œè€…æ¡† -->
    <div class="author-box">
      <div class="author-avatar">ğŸ‘©â€ğŸ’»</div>
      <div class="author-info">
        <a href="/about/" class="author-name">{siteConfig.author}</a>
        <p class="author-bio">ç§‘æŠ€ï¼Œæ˜¯ç‚ºäº†è®“æˆ‘å€‘æœ‰æ›´å¤šæ™‚é–“å»æ„›ã€‚å¹«åŠ©åª½åª½å€‘ç”¨ç§‘æŠ€èˆ‡åœ˜è³¼ï¼ŒæŠŠæ™‚é–“ç•™çµ¦æ„›èˆ‡é™ªä¼´ã€‚</p>
      </div>
    </div>

    <!-- åˆ†äº«æŒ‰éˆ• -->
    <div class="share-buttons">
      <span>åˆ†äº«æ–‡ç« ï¼š</span>
      <a href={`https://www.facebook.com/sharer/sharer.php?u=${Astro.url}`} 
         target="_blank" 
         class="share-btn facebook">
        Facebook
      </a>
      <a href={`https://line.me/R/msg/text/?${encodeURIComponent(post.data.title)}%20${Astro.url}`} 
         target="_blank" 
