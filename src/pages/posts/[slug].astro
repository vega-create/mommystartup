  </article>
</Layout>

<style>
  .faq-section {
    margin-top: 50px;
    padding-top: 40px;
    border-top: 2px solid var(--primary-light);
  }
  
  .faq-title {
    font-size: 24px;
    font-weight: 700;
    color: var(--text);
    margin-bottom: 24px;
  }
  
  .faq-list {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }
  
  .faq-item {
    background: #faf8f6;
    border: 1px solid #f0ece8;
    border-radius: 12px;
    overflow: hidden;
  }
  
  .faq-question {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 16px 20px;
    cursor: pointer;
    font-weight: 600;
    color: var(--text);
    font-size: 15px;
    list-style: none;
  }
  
  .faq-question::-webkit-details-marker {
    display: none;
  }
  
  .faq-question:hover {
    background: #f5f0ec;
  }
  
  .faq-arrow {
    flex-shrink: 0;
    transition: transform 0.2s;
    color: var(--text-light);
  }
  
  details[open] .faq-arrow {
    transform: rotate(180deg);
  }
  
  .faq-answer {
    padding: 0 20px 16px;
    color: var(--text-light);
    line-height: 1.8;
    font-size: 14px;
    border-top: 1px solid #f0ece8;
    padding-top: 16px;
  }

  .share-buttons {
    display: flex;
    align-items: center;
    gap: 15px;
    margin-top: 40px;
    padding-top: 30px;
    border-top: 1px solid var(--primary-light);
  }
  
  .share-buttons span {
    color: var(--text-light);
    font-size: 14px;
  }
  
  .share-btn {
    display: inline-block;
    padding: 8px 20px;
    border-radius: 20px;
    font-size: 13px;
    font-weight: 500;
    color: white;
  }
  
  .share-btn.facebook {
    background: #1877F2;
  }
  
  .share-btn.line {
    background: #06C755;
  }
  
  .share-btn:hover {
    color: white;
    opacity: 0.9;
  }
  
  .related-posts {
    margin-top: 60px;
    padding-top: 40px;
    border-top: 1px solid var(--primary-light);
  }
  
  .related-posts .section-title {
    font-size: 22px;
    margin-bottom: 25px;
  }

  .article-content :global(table) {
    width: 100%;
    border-collapse: separate;
    border-spacing: 0;
    margin: 30px 0;
    font-size: 14px;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 2px 12px rgba(0,0,0,0.06);
    border: 1px solid #f0ece8;
  }
  .article-content :global(thead) {
    background: linear-gradient(135deg, var(--primary), var(--primary-dark));
  }
  .article-content :global(th) {
    color: white;
    font-weight: 600;
    padding: 14px 20px;
    text-align: left;
    font-size: 14px;
    letter-spacing: 0.5px;
  }
  .article-content :global(td) {
    padding: 12px 20px;
    border-bottom: 1px solid #f0ece8;
    color: var(--text);
    line-height: 1.6;
  }
  .article-content :global(tbody tr:nth-child(even)) {
    background: #faf8f6;
  }
  .article-content :global(tbody tr:hover) {
    background: var(--primary-light);
    transition: background 0.2s;
  }
  .article-content :global(tr:last-child td) {
    border-bottom: none;
  }
  .article-content :global(th:first-child) {
    border-top-left-radius: 12px;
  }
  .article-content :global(th:last-child) {
    border-top-right-radius: 12px;
  }
  .article-content :global(h2) {
    font-size: 24px;
    font-weight: 700;
    color: var(--text);
    margin: 40px 0 16px;
    padding-bottom: 10px;
    border-bottom: 2px solid var(--primary-light);
  }
  .article-content :global(h3) {
    font-size: 20px;
    font-weight: 600;
    color: var(--text);
    margin: 30px 0 12px;
    padding-left: 12px;
    border-left: 3px solid var(--primary);
  }
  .article-content :global(h4) {
    font-size: 17px;
    font-weight: 600;
    color: var(--text);
    margin: 24px 0 10px;
  }

  .toc {
    background: #faf8f6;
    border: 1px solid #f0ece8;
    border-radius: 12px;
    padding: 20px 24px;
    margin: 30px 0;
  }
  .toc-title {
    font-weight: 700;
    font-size: 16px;
    color: var(--text);
    margin-bottom: 12px;
  }
  .toc ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .toc li {
    margin: 6px 0;
  }
  .toc li a {
    color: var(--text-light);
    font-size: 14px;
    text-decoration: none;
    transition: color 0.2s;
  }
  .toc li a:hover {
    color: var(--primary-dark);
  }
  .toc .toc-h3 {
    padding-left: 20px;
  }
</style>

<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    const nums = ['ä¸€', 'äºŒ', 'ä¸‰', 'å››', 'äº”', 'å…­', 'ä¸ƒ', 'å…«', 'ä¹', 'å'];
    const content = document.querySelector('.article-content');
    if (!content) return;
    let h2Count = 0;
    let h3Count = 0;
    content.querySelectorAll('h2, h3').forEach(el => {
      if (el.tagName === 'H2') {
        h2Count++;
        h3Count = 0;
        el.textContent = (nums[h2Count - 1] || h2Count) + 'ã€' + el.textContent;
      } else {
        h3Count++;
        el.textContent = h3Count + '. ' + el.textContent;
      }
    });
  });
</script>

