---
import Layout from '../../layouts/Layout.astro';
import ArticleSchema from '../../components/ArticleSchema.astro';
import BreadcrumbSchema from '../../components/BreadcrumbSchema.astro';
import FAQSchema from '../../components/FAQSchema.astro';
import { siteConfig } from '../../site.config';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts.map(post => ({
    params: { slug: post.slug },
    props: { post }
  }));
}

const { post } = Astro.props;
const { Content, headings } = await post.render();
const faqs = post.data.faq || [];

const nums = ['‰∏Ä', '‰∫å', '‰∏â', 'Âõõ', '‰∫î', 'ÂÖ≠', '‰∏É', 'ÂÖ´', '‰πù', 'ÂçÅ'];
let h2Count = 0;
let h3Count = 0;
const tocItems = headings.filter(h => h.depth <= 3).map(h => {
  if (h.depth === 2) {
    h2Count++;
    h3Count = 0;
    return { ...h, label: `${nums[h2Count - 1] || h2Count}„ÄÅ${h.text}` };
  } else {
    h3Count++;
    return { ...h, label: `${h3Count}. ${h.text}` };
  }
});

// FAQ Âä†Âà∞ÁõÆÈåÑ
if (faqs.length > 0) {
  h2Count++;
  tocItems.push({ depth: 2, slug: 'faq-section', text: 'Â∏∏Ë¶ãÂïèÈ°å FAQ', label: `${nums[h2Count - 1] || h2Count}„ÄÅÂ∏∏Ë¶ãÂïèÈ°å FAQ` });
}

// ÂèñÂæóÁõ∏ÈóúÊñáÁ´†
const allPosts = await getCollection('posts');
const relatedPosts = allPosts
  .filter(p => p.data.category === post.data.category && p.slug !== post.slug)
  .slice(0, 3);
---

<Layout 
  title={post.data.title} 
  description={post.data.description}
  image={post.data.image}
>
  <!-- Schema ÁµêÊßãÂåñË≥áÊñô -->
  <ArticleSchema
    title={post.data.title}
    description={post.data.description}
    publishDate={post.data.publishDate}
    image={post.data.image}
    url={siteConfig.url + Astro.url.pathname}
    category={post.data.category}
    tags={post.data.tags}
  />
  <BreadcrumbSchema items={[
    { name: 'È¶ñÈ†Å', url: '/' },
    { name: post.data.category, url: `/category/${post.data.category}/` },
    { name: post.data.title },
  ]} />

  <article class="article">
    <header class="article-header">
      <a href={`/category/${post.data.category}/`} class="article-category">
        {post.data.category}
      </a>
      <h1 class="article-title">{post.data.title}</h1>
      <p class="article-meta">
        {post.data.author} ¬∑ {new Date(post.data.publishDate).toLocaleDateString('zh-TW', { year: 'numeric', month: 'long', day: 'numeric' })}
      </p>
    </header>
    
    {post.data.image && (
      <img src={post.data.image} alt={post.data.title} class="article-image">
    )}

    {tocItems.length > 0 && (
      <nav class="toc">
        <p class="toc-title">üìë ÁõÆÈåÑ</p>
        <ul>
          {tocItems.map(h => (
            <li class={`toc-h${h.depth}`}>
              <a href={`#${h.slug}`}>{h.label}</a>
            </li>
          ))}
        </ul>
      </nav>
    )}

    <div class="article-content">
      <Content />
    </div>

    <!-- FAQ ÂçÄÂ°ä -->
    {faqs.length > 0 && (
      <section id="faq-section" class="faq-section">
        <h2 class="faq-title">‚ùì Â∏∏Ë¶ãÂïèÈ°å FAQ</h2>
        <div class="faq-list">
          {faqs.map((faq, i) => (
            <details class="faq-item">
              <summary class="faq-question">
                <span>Q{i + 1}. {faq.question || faq.q}</span>
                <svg class="faq-arrow" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M19 9l-7 7-7-7" />
                </svg>
              </summary>
              <div class="faq-answer">
                {faq.answer || faq.a}
              </div>
            </details>
          ))}
        </div>
        <FAQSchema faqs={faqs} />
      </section>
    )}
    
    <!-- ÂàÜ‰∫´ÊåâÈàï -->
    <div class="share-buttons">
      <span>ÂàÜ‰∫´ÊñáÁ´†Ôºö</span>
      <a href={`https://www.facebook.com/sharer/sharer.php?u=${Astro.url}`} 
         target="_blank" 
         class="share-btn facebook">
        Facebook
      </a>
      <a href={`https://line.me/R/msg/text/?${encodeURIComponent(post.data.title)}%20${Astro.url}`} 
         target="_blank" 
         class="share-btn line">
        LINE
      </a>
    </div>
    
    <!-- Áõ∏ÈóúÊñáÁ´† -->
    {relatedPosts.length > 0 && (
      <section class="related-posts">
        <h2 class="section-title">Áõ∏ÈóúÊñáÁ´†</h2>
        <div class="posts-grid" style="grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));">
          {relatedPosts.map(related => (
            <a href={`/posts/${related.slug}/`} class="post-card">
              <div class="post-card-image" style="padding-top: 60%;">
                {related.data.image ? (
                  <img src={related.data.image} alt={related.data.title}>
                ) : (
                  <div style="background: linear-gradient(135deg, var(--primary-light), var(--primary)); position: absolute; inset: 0;"></div>
                )}
              </div>
              <div class="post-card-content">
                <h3 class="post-card-title" style="font-size: 16px;">{related.data.title}</h3>
              </div>
            </a>
          ))}
        </div>
      </section>
    )}
  </article>
</Layout>

<style>
  .faq-section {
    margin-top: 50px;
    padding-top: 40px;
    border-top: 2px solid var(--primary-light);
  }
  
  .faq-title {
    font-size: 24px;
    font-weight: 700;
    color: var(--text);
    margin-bottom: 24px;
  }
  
  .faq-list {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }
  
  .faq-item {
    background: #faf8f6;
    border: 1px solid #f0ece8;
    border-radius: 12px;
    overflow: hidden;
  }
  
  .faq-question {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 16px 20px;
    cursor: pointer;
    font-weight: 600;
    color: var(--text);
    font-size: 15px;
    list-style: none;
  }
  
  .faq-question::-webkit-details-marker {
    display: none;
  }
  
  .faq-question:hover {
    background: #f5f0ec;
  }
  
  .faq-arrow {
    flex-shrink: 0;
    transition: transform 0.2s;
    color: var(--text-light);
  }
  
  details[open] .faq-arrow {
    transform: rotate(180deg);
  }
  
  .faq-answer {
    padding: 0 20px 16px;
    color: var(--text-light);
    line-height: 1.8;
    font-size: 14px;
    border-top: 1px solid #f0ece8;
    padding-top: 16px;
  }

  .share-buttons {
    display: flex;
    align-items: center;
    gap: 15px;
    margin-top: 40px;
    padding-top: 30px;
    border-top: 1px solid var(--primary-light);
  }
  
  .share-buttons span {
    color: var(--text-light);
    font-size: 14px;
  }
  
  .share-btn {
    display: inline-block;
    padding: 8px 20px;
    border-radius: 20px;
    font-size: 13px;
    font-weight: 500;
    color: white;
  }
  
  .share-btn.facebook {
    background: #1877F2;
  }
  
  .share-btn.line {
    background: #06C755;
  }
  
  .share-btn:hover {
    color: white;
    opacity: 0.9;
  }
  
  .related-posts {
    margin-top: 60px;
    padding-top: 40px;
    border-top: 1px solid var(--primary-light);
  }
  
  .related-posts .section-title {
    font-size: 22px;
    margin-bottom: 25px;
  }

  .article-content :global(table) {
    width: 100%;
    border-collapse: separate;
    border-spacing: 0;
    margin: 30px 0;
    font-size: 14px;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 2px 12px rgba(0,0,0,0.06);
    border: 1px solid #f0ece8;
  }
  .article-content :global(thead) {
    background: linear-gradient(135deg, var(--primary), var(--primary-dark));
  }
  .article-content :global(th) {
    color: white;
    font-weight: 600;
    padding: 14px 20px;
    text-align: left;
    font-size: 14px;
    letter-spacing: 0.5px;
  }
  .article-content :global(td) {
    padding: 12px 20px;
    border-bottom: 1px solid #f0ece8;
    color: var(--text);
    line-height: 1.6;
  }
  .article-content :global(tbody tr:nth-child(even)) {
    background: #faf8f6;
  }
  .article-content :global(tbody tr:hover) {
    background: var(--primary-light);
    transition: background 0.2s;
  }
  .article-content :global(tr:last-child td) {
    border-bottom: none;
  }
  .article-content :global(th:first-child) {
    border-top-left-radius: 12px;
  }
  .article-content :global(th:last-child) {
    border-top-right-radius: 12px;
  }
  .article-content :global(h2) {
    font-size: 24px;
    font-weight: 700;
    color: var(--text);
    margin: 40px 0 16px;
    padding-bottom: 10px;
    border-bottom: 2px solid var(--primary-light);
  }
  .article-content :global(h3) {
    font-size: 20px;
    font-weight: 600;
    color: var(--text);
    margin: 30px 0 12px;
    padding-left: 12px;
    border-left: 3px solid var(--primary);
  }
  .article-content :global(h4) {
    font-size: 17px;
    font-weight: 600;
    color: var(--text);
    margin: 24px 0 10px;
  }

  .toc {
    background: #faf8f6;
    border: 1px solid #f0ece8;
    border-radius: 12px;
    padding: 20px 24px;
    margin: 30px 0;
  }
  .toc-title {
    font-weight: 700;
    font-size: 16px;
    color: var(--text);
    margin-bottom: 12px;
  }
  .toc ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .toc li {
    margin: 6px 0;
  }
  .toc li a {
    color: var(--text-light);
    font-size: 14px;
    text-decoration: none;
    transition: color 0.2s;
  }
  .toc li a:hover {
    color: var(--primary-dark);
  }
  .toc .toc-h3 {
    padding-left: 20px;
  }
</style>

<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    const nums = ['‰∏Ä', '‰∫å', '‰∏â', 'Âõõ', '‰∫î', 'ÂÖ≠', '‰∏É', 'ÂÖ´', '‰πù', 'ÂçÅ'];
    const content = document.querySelector('.article-content');
    if (!content) return;
    let h2Count = 0;
    let h3Count = 0;
    content.querySelectorAll('h2, h3').forEach(el => {
      if (el.tagName === 'H2') {
        h2Count++;
        h3Count = 0;
        el.textContent = (nums[h2Count - 1] || h2Count) + '„ÄÅ' + el.textContent;
      } else {
        h3Count++;
        el.textContent = h3Count + '. ' + el.textContent;
      }
    });
  });
</script>
